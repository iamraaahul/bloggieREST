<% include ./partials/header.ejs %>


    <div class="ui main text container segment">
        <div class="ui huge header">
            <%= blog.title %>
        </div>
        <div class="ui top attached">
            <div class="item">
                <img class="ui centered circular image" src="<%=blog.image %>" width="400" height="300" alt="Image">
            </div>
            <div class="content">
                <span><%= blog.created.toDateString() %></span>
            </div>
            <div class="description">
                <p>
                    <%- blog.body %>
                </p>
            </div>
            
            <a class="ui blue basic button" href="/blogs/<%= blog._id %>/edit">EDIT</a>
            
            <form id="form" action="/blogs/<%= blog._id %>?_method=DELETE" method="POST">
                
                <button class="ui red basic button">DELETE</button>
            </form>
            
        </div>
    </div>
    
    
<% include ./partials/footer.ejs %>